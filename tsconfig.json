{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true, // Import va eksport uchun
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext", // Brauzer uchun mos modul
    "moduleResolution": "Classic", // Brauzer muhitida
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // JavaScript fayllarini chiqarmaslik
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
